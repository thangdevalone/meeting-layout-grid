{
    "name": "meet-layout-grid-monorepo",
    "private": true,
    "version": "1.0.2",
    "description": "A modern, framework-agnostic responsive grid library for meeting/video layouts with smooth Motion animations",
    "type": "module",
    "scripts": {
        "build": "pnpm --filter './packages/*' build",
        "build:examples": "pnpm --filter './examples/*' build",
        "dev": "pnpm -r --parallel dev",
        "lint": "eslint packages --ext .ts,.tsx,.vue",
        "test": "pnpm -r test",
        "clean": "pnpm -r clean",
        "publish:all": "pnpm --filter './packages/*' publish --access public"
    },
    "keywords": [
        "grid",
        "responsive",
        "video",
        "meeting",
        "motion",
        "animation",
        "react",
        "vue",
        "angular"
    ],
    "author": "ThangDevAlone",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "typescript": "^5.3.0",
        "eslint": "^8.55.0",
        "prettier": "^3.1.0",
        "unbuild": "^2.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
